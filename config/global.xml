<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <GlobalConfiguration>
    <ConfigurationDirectory>{basedir}\config</ConfigurationDirectory>
	<ProjectDirectory>{basedir}\test</ProjectDirectory>
    <PluginsDirectory>{basedir}\plugins</PluginsDirectory>
    <PluginLoaders>
        org.testium.plugins.ShellTestPlugin;
        org.testium.plugins.PerlTestPlugin;
        org.testium.plugins.SoapuiPlugin;
        org.testium.plugins.SutControlPlugin
    </PluginLoaders>
    <DefaultUserConfigurationFile>.testautomation</DefaultUserConfigurationFile>
    <TraceEnabled>false</TraceEnabled>
    <TraceDepth>10</TraceDepth>
    <TraceClass>org.testium.Main</TraceClass>
    <TraceLevel>ALL</TraceLevel>
    <!-- 
		0: HIGH,
		1: EXEC,
		2: EXEC_PLUS,
		3: EXEC_UTIL,
		4: SUITE,
		5: CONSTRUCTOR,
		6: UTIL,
		7: SETTER,
		8: GETTER,
		9: ALL
	-->
    <TestEnvironment>Testium Example</TestEnvironment>
  </GlobalConfiguration>
</Configuration>
